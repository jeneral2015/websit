rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /site_data/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true; // require admin claim or adjust
    }
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow read/write access to all users (for demo purposes)
    // In production, secure this with authentication
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
